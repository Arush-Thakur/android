<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/drawerLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">

        <fragment
            android:id="@+id/BuffersListDocked"
            android:name="com.irccloud.android.fragment.BuffersListFragment"
            android:layout_width="@dimen/drawer_width"
            android:layout_height="match_parent"
            tools:layout="@layout/bufferslist" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:background="?actionbarDrawable"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"/>

                <ProgressBar
                    android:id="@+id/progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-7dp"
                    android:indeterminate="true"
                    android:max="1000"
                    android:layout_gravity="bottom"
                    android:visibility="gone" />
            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/errorMsg"
                        android:background="?contentBackgroundColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="6dp"
                        android:visibility="gone" />

                    <fragment
                        android:id="@+id/messageViewFragment"
                        android:name="com.irccloud.android.fragment.MessageViewFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:layout="@layout/messageview" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:background="?attr/textareaBackgroundColor"
                        android:gravity="bottom"
                        android:paddingBottom="8dp">

                        <com.irccloud.android.ActionEditText
                            android:id="@+id/messageTxt"
                            style="@style/messageTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:background="?attr/textareaBackgroundColor"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="Message"
                            android:inputType="textCapSentences|textAutoCorrect|textMultiLine|textShortMessage"
                            android:maxLines="@integer/max_input_lines"
                            android:minHeight="32dp"
                            android:nextFocusLeft="@id/photoBtn"
                            android:theme="?editTextTheme" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/photoBtn"
                                style="@style/Widget.Styled.ImageButton"
                                android:layout_marginLeft="8dp"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:contentDescription="Insert Photo"
                                android:scaleType="center"
                                app:srcCompat="@drawable/ic_action_photo" />

                            <ImageButton
                                android:id="@+id/bold"
                                style="@style/Widget.Styled.ImageButton"
                                android:layout_marginLeft="8dp"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_toRightOf="@id/photoBtn"
                                android:layout_alignParentTop="true"
                                android:contentDescription="Bold"
                                android:scaleType="center"
                                app:srcCompat="@drawable/ic_format_bold" />

                            <ImageButton
                                android:id="@+id/italics"
                                style="@style/Widget.Styled.ImageButton"
                                android:layout_marginLeft="8dp"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_toRightOf="@id/bold"
                                android:layout_alignParentTop="true"
                                android:contentDescription="Italics"
                                android:scaleType="center"
                                app:srcCompat="@drawable/ic_format_italics" />

                            <ImageButton
                                android:id="@+id/underline"
                                style="@style/Widget.Styled.ImageButton"
                                android:layout_marginLeft="8dp"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_toRightOf="@id/italics"
                                android:layout_alignParentTop="true"
                                android:contentDescription="Underline"
                                android:scaleType="center"
                                app:srcCompat="@drawable/ic_format_underline" />

                            <ImageButton
                                android:id="@+id/color"
                                style="@style/Widget.Styled.ImageButton"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="8dp"
                                android:layout_toRightOf="@id/underline"
                                android:contentDescription="Text Color"
                                android:scaleType="center"
                                app:srcCompat="@drawable/ic_format_color" />

                            <ImageButton
                                android:id="@+id/background"
                                style="@style/Widget.Styled.ImageButton"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="8dp"
                                android:layout_toRightOf="@id/color"
                                android:contentDescription="Background"
                                android:scaleType="center"
                                app:srcCompat="@drawable/ic_format_background" />

                            <ImageButton
                                android:id="@+id/clear"
                                style="@style/Widget.Styled.ImageButton"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="8dp"
                                android:layout_toRightOf="@id/background"
                                android:contentDescription="Clear Formatting"
                                android:scaleType="center"
                                app:srcCompat="@drawable/ic_format_clear" />

                            <ImageButton
                                android:id="@+id/sendBtn"
                                style="@style/Widget.Styled.ImageButton"
                                android:layout_marginRight="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:contentDescription="Send"
                                android:paddingBottom="4dp"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:paddingTop="4dp"
                                android:scaleType="fitEnd"
                                app:srcCompat="@drawable/ic_action_send" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <fragment
                    android:id="@+id/usersListFragmentDocked"
                    android:name="com.irccloud.android.fragment.UsersListFragment"
                    android:layout_width="@dimen/drawer_width"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    tools:layout="@layout/userslist" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:id="@+id/drop_target"
        android:paddingTop="@dimen/status_bar_height"
        android:visibility="gone">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/drop_target_bg"
            android:padding="32dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drop files to upload\nand share"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_marginBottom="4dp"/>
            <ImageView
                android:id="@+id/drop_target_icon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:srcCompat="@drawable/ic_action_photo"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </FrameLayout>

    <fragment
        android:id="@+id/BuffersList"
        android:name="com.irccloud.android.fragment.BuffersListFragment"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:visibility="gone"
        tools:layout="@layout/bufferslist" />

    <fragment
        android:id="@+id/usersListFragment"
        android:name="com.irccloud.android.fragment.UsersListFragment"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:visibility="gone"
        tools:layout="@layout/userslist" />

</android.support.v4.widget.DrawerLayout>